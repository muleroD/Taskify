type User {
    id: ID!
    name: String!
    email: String!
    password: String!
    createdAt: String!
}

type UserOutput {
    id: ID!
    name: String!
    email: String!
    createdAt: String!
}

input UserInput {
    name: String!
    email: String!
    password: String!
}

input UserFilter {
    name: String
    email: String
}


# Query is for getting data
type Query {
    getUsers: [UserOutput]
    getUserById(id: ID!): UserOutput
    getUsersByFilter(input: UserFilter!): [UserOutput]
}

# Mutation is for changing data
type Mutation {
    addUser(input: UserInput!): UserOutput
    deleteUser(id: ID!): UserOutput
}